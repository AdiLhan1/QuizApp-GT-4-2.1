<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorWhite</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowBackground">#fff</item>
    </style>

    <style name="TVprogressBarStyle">
        <item name="android:text">@string/_5_10</item>
        <item name="android:font" tools:targetApi="o">@font/regular</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="TVNameItemStyle">
        <item name="android:text">Geography</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#1A051D</item>
        <item name="android:font" tools:targetApi="o">@font/bold</item>
    </style>

    <style name="ButtonSkipSyle">
        <item name="android:text">Skip</item>
        <item name="android:textColor">#fff</item>
        <item name="android:font" tools:targetApi="o">@font/bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/skip_btn_style</item>
    </style>

    <style name="ButtonTryAgainSyle">
        <item name="android:text">Try again</item>
        <item name="android:textColor">#fff</item>
        <item name="android:font" tools:targetApi="o">@font/bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/skip_btn_style</item>
    </style>

    <style name="ButtonFinishStyle">
        <item name="android:text">Finish</item>
        <item name="android:textColor">#fff</item>
        <item name="android:font" tools:targetApi="o">@font/bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/finish_btn</item>
    </style>

    <style name="ButtonExitStyle">
        <item name="android:text">Exit</item>
        <item name="android:textColor">#fff</item>
        <item name="android:font" tools:targetApi="o">@font/bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/finish_btn</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:background">#FC89FA</item>
    </style>


    <style name="ItemQuizQuestionTVStyle">
        <item name="android:text">What is the largest city and commercial capital of Sri Lanka?
        </item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#1A051D</item>
        <item name="android:font" tools:targetApi="o">@font/bold</item>
    </style>

    <style name="ItemQuizButtonStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#6979F8</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_style</item>
    </style>

    <style name="ItemQuizButtonStyles">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#6979F8</item>
        <item name="android:background">@drawable/btn_style</item>
    </style>

    <style name="StyleButton">
        <item name="android:background">@drawable/stroke_btn</item>
        <item name="android:text">START</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:font" tools:targetApi="o">@font/bold</item>
    </style>

    <style name="StyleTextView">
        <item name="android:textColor">#A9A9A9</item>
        <item name="android:textSize">12sp</item>
        <item name="android:font" tools:targetApi="o">@font/regular</item>
    </style>

    <style name="TitleText" parent="BoldText">
        <item name="android:textSize">24sp</item>
        <item name="android:font" tools:targetApi="o">@font/bold</item>
    </style>

    <style name="AmountStyle">
        <item name="android:text">@string/_25</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#3F3356</item>
        <item name="android:font" tools:targetApi="o">@font/bold</item>
    </style>

    <style name="BoldText">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:font" tools:targetApi="o">@font/bold</item>
    </style>

    <style name="RegularText">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:font" tools:targetApi="o">@font/regular</item>
    </style>

    <style name="HistoryCardViewStyle">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ResultCardViewStyle" parent="RegularText">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ResultTextViewStyle" parent="RegularText">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="HistoryCorrectAnswers" parent="HistoryCardViewStyle">
        <item name="android:text">Correct answers:</item>
    </style>

    <style name="HistoryDifficulty" parent="HistoryCardViewStyle">
        <item name="android:text">Difficulty:</item>
    </style>

    <style name="HistoryCategoryName">
        <item name="android:text">Category:</item>
        <item name="android:textSize">17sp</item>
        <item name="android:font" tools:targetApi="o">@font/bold</item>
        <item name="android:textColor">#1F2041</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HistoryCategoryName2">
        <item name="android:text">Category:</item>
        <item name="android:textSize">15sp</item>
        <item name="android:font" tools:targetApi="o">@font/bold</item>
        <item name="android:textColor">#1F2041</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BigText" parent="BoldText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/colorBlack</item>
    </style>


    <string name="_29">29</string>
</resources>
